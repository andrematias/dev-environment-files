    "command": "editor.unfold",
    "when": "editorTextFocus && foldingEnabled"
  },
  {
    "key": "ctrl+shift+]",
    "command": "editor.fold",
    "when": "editorTextFocus && foldingEnabled"
  },

  {
    "key": "ctrl+shift+[",
    "command": "editor.unfold",
    "when": "editorTextFocus && foldingEnabled"
  },
  {
    "key": "ctrl+shift+]",
    "command": "editor.fold",
    "when": "editorTextFocus && foldingEnabled"
  }
]

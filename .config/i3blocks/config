# vim: syntax=dosini

# Global properties
separator=true
separator_block_width=30
align=center


[wallpaper]
command=feh --recursive --bg-fill --randomize ~/Pictures/Wallpapers/
full_text=󰸉 

[redshift]
label=
command=~/.config/i3blocks/scripts/toggle
interval=once
COMMAND_ON=redshift -P -O 2500 > /tmp/redshift.tmp
COMMAND_OFF=redshift -x; rm -f /tmp/redshift.tmp
COMMAND_STATUS=test -f /tmp/redshift.tmp
COLOR_ON=#FFFF85
COLOR_OFF=#FFFFFF

[internet]
command=~/.config/i3blocks/scripts/internet
interval=60

[nm-vpn]
init_color=#FFFFFF
on_color=#FFFFFF
command=~/.config/i3blocks/scripts/nm-vpn
label=󰖂  
interval=5

[volume-pipewire]
#exposed format variables: ${SYMB}, ${VOL}, ${INDEX}, ${NAME}
command=~/.config/i3blocks/scripts/volume-pipewire
interval=1
signal=1
LONG_FORMAT="${SYMB} ${VOL}"
SHORT_FORMAT="${SYMB} ${VOL}"
DEFAULT_COLOR="#FFFFFF"
MUTED_COLOR="#FFFFFF"

[arch-update]
command=~/.config/i3blocks/scripts/arch-update
interval=3600
markup=pango
UPDATE_COLOR=#FFFF85
BASE_COLOR=#FFFFFF
LABEL=  
QUIET=true

[pacman-updates]
command=~/.config/i3blocks/scripts/arch-update
markup=pango
interval= 3600
QUIET=true
WATCH=^linux.* ^pacman.*
BASE_COLOR=#FFFFFF
UPDATE_COLOR=#FFFF85
AUR_YAY=true
LABEL= 

[crypto]
markup=pango
interval=60
instance=bitcoin
command=~/.config/i3blocks/scripts/crypto

[cpu_usage]
markup=pango
command=~/.config/i3blocks/scripts/cpu_usage
interval=5
T_WARN=50
T_CRIT=80
DECIMALS=2
COLOR_NORMAL=#FFFFFF
COLOR_WARN=#FFFC00
COLOR_CRIT=#AA3941

[memory]
markup=pango
command=~/.config/i3blocks/scripts/memory
interval=30


[time]
TZ=America/Sao_Paulo
markup=pango
command=date +"%a %d %B %Y - %H:%M:%S "
interval=1


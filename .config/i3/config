####################################################################
#   Exit mode
####################################################################

 set $mode_system [L]OCK LOG[O]UT [R]EBOOT [P]OWEROFF

 mode "$mode_system" {
     bindsym l exec $psst ~/.config/i3/scripts/i3exit.sh lock, mode "default"
     bindsym o exec $psst ~/.config/i3/scripts/i3exit.sh logout, mode "default"
     bindsym r exec $psst ~/.config/i3/scripts/i3exit.sh reboot, mode "default"
     bindsym p exec $psst ~/.config/i3/scripts/i3exit.sh poweroff, mode "default"

     # back to normal: Enter or Escape
     bindsym Return mode "default"
     bindsym Escape mode "default"
 }

# bindsym Ctrl+$mod+Delete mode "$mode_system"

####################################################################
#   Resize and Moves
####################################################################
set $mode_resize resize
mode $mode_resize {
        bindsym h resize grow width 2 px or 2 ppt
        bindsym j resize grow height 2 px or 2 ppt
        bindsym k resize shrink height 2 px or 2 ppt
        bindsym l resize shrink width 2 px or 2 ppt
        bindsym Left resize grow width 2 px or 2 ppt
        bindsym Down resize grow height 2 px or 2 ppt
        bindsym Up resize shrink height 2 px or 2 ppt
        bindsym Right resize shrink width 2 px or 2 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

####################################################################
#   Redshift mode
####################################################################
bindsym $mod+Shift+n mode "$mode_redshift"
set $mode_redshift Set colour temperature: (a)uto, (r)eset, (2)500K, (3)000K, (4)000K, (5)000K
set $kill_redshift pkill -9 redshift;
mode "$mode_redshift" {
    bindsym a exec $psst "$kill_redshift redshift -P -t 5000:4000", mode "default"
    bindsym r exec $psst "$kill_redshift redshift -x", mode "default"
    bindsym 2 exec $psst "$kill_redshift redshift -P -O 2500 > /tmp/redshift.tmp", mode "default"
    bindsym 3 exec $psst "$kill_redshift redshift -P -O 3000 > /tmp/redshift.tmp", mode "default"
    bindsym 4 exec $psst "$kill_redshift redshift -P -O 4000 > /tmp/redshift.tmp", mode "default"
    bindsym 5 exec $psst "$kill_redshift redshift -P -O 5000 > /tmp/redshift.tmp", mode "default"
 
    # exit mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

